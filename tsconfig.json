{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src/",
    "removeComments": true,
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.ts",
    "tests/**/*.ts",
    "./coverage",
    "./dist",
    "__tests__",
    "jest.config.js"
  ]
}